      <srai>Кря</srai>
    </template>
  </category>

  <category>
    <pattern>_ кря *</pattern>
    <template>
      <srai>кря</srai>
    </template>
  </category>

  <category>
    <pattern>_ кря</pattern>
    <template>
      <srai>кря</srai>
    </template>
  </category>

  <category>
    <pattern>кря</pattern>
    <template>
      <random>
        <li>Кря</li>
        <li>Кря Кря</li>
        <li>Кря Кря Кря</li>
        <li>Кря!</li>
